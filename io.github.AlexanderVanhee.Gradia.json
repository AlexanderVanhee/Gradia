{
  "id": "io.github.AlexanderVanhee.Gradia",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "gradia",
  "finish-args": [
    "--filesystem=home",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "build-options": {
    "env": {
      "PATH": "/app/bin:/usr/bin"
    }
  },
  "modules": [
    {
      "name": "imagemagick",
      "buildsystem": "autotools",
      "config-opts": [
        "--prefix=/app",
	"--without-perl",
        "--without-magick-plus-plus",
        "--disable-docs",
	"--without-x"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://imagemagick.org/archive/releases/ImageMagick-7.1.1-47.tar.xz",
          "sha256": "2396cd3c4237cfbc09a89d31d1cee157ee11fbc8ec1e540530e10175cb707160"
        }
      ]
    },
    {
      "name": "gradia",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "../Gradia"
        }
      ],
      "config-opts": [
        "--libdir=lib"
      ]
    }
  ]
}
